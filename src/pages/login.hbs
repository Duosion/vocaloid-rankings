<!DOCTYPE html>
<link rel="stylesheet" href="../css/login.css">
<div class="page-card-container">
  
  {{> back-button}}
  
  <div class="main-title text title filter-title">Login</div>
  
  

  <form id="login-form" action="/login" method="post" target="_self" class="list vertical">
    <input type="text" class="login-input" id="username" name="username" placeholder="Username" spellcheck="false" required>
    <input type="password" class="login-input" id="password" name="password" placeholder="Password" required>
    {{#if errorMessage}}
      <div class="text sub error">{{errorMessage}}</div>
    {{/if}}
    <div class="login-container">
      <button class="rounded-button">Login</button>
    </div>
  </form>

</div>