<!DOCTYPE html>
<link rel="stylesheet" href="/css/rankingsFilter.css">
<div class="page-card-container on-surface-text">
  
  <a class="icon-button floating top left" href="{{referer}}">
    <span class="material-symbols-rounded">arrow_back</span>
  </a>
  
  <div class="headline-medium title">Settings</div>
  
  <form id="filter-form" action="/settings" method="post" target="_self" class="filter-content list vertical">
    
    {{#each filterOptions}}
    <div class="title-medium-large on-surface-text">{{DisplayName}}</div>
      <div class="chip-group title-medium-large">
        <div class="form-radio-container">
          {{#each Values}}
            <input type="radio" id="{{@key}}" name="{{@../key}}" value="{{@key}}" {{#if (comp @key (get ../../cookies @../key))}}checked{{/if}}>
          
            <label class="filter chip" for="{{@key}}">
              <span class="material-symbols-rounded leading">done</span>
              {{DisplayName}}
            </label>
          
          {{/each}}
        </div>

      </div>
    {{/each}}
    
    {{> default-hr}}
    
    <div class="submit-container">
      <button class="rounded-button">Save</button>
    </div>
    
  </form>
  
</div>