<link rel="stylesheet" href="/css/rankingsFilter.css">
<div class="page-card-container on-surface-text">
  
  {{> back-button referer=referer}}
  
  <div class="headline-medium title">{{localization.settings}}</div>
  
  <form id="filter-form" action="/settings" method="post" target="_self" class="filter-content list vertical">
    
    {{#each filterOptions}}
    <div class="title-medium-large on-surface-text">{{localize displayName}}</div>
      <div class="chip-group title-medium-large">
        <div class="form-radio-container">
          {{#each values}}
            <input type="radio" id="{{@../key}}{{id}}" name="{{@../key}}" value="{{id}}" {{#if (comp id (get ../../cookies @../key))}}checked{{/if}}>
          
            <label class="filter chip" for="{{@../key}}{{id}}">
              <span class="material-symbols-rounded leading">done</span>
              {{localize name}}
            </label>
          
          {{/each}}
        </div>
      </div>
    {{/each}}
    
    {{> default-hr}}
    
    <div class="submit-container">
      <button class="material-button inverse label-large">{{localization.save}}</button>
    </div>
    
  </form>
  
</div>