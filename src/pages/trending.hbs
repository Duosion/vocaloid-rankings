<link rel="stylesheet" href="/css/rankings.css">

<style>
@media (prefers-color-scheme: dark) {
    {{#each trending}} 
        #e{{placement}} .title .main-title:hover {
            color: {{song.darkColor}}
        }
    {{/each}}
}

@media (prefers-color-scheme: light) {
    {{#each trending}} 
        #e{{placement}} .title .main-title:hover {
            color: {{song.lightColor}}
        }
    {{/each}}
}
</style>

<div id="rankings-container">

    <div id="rankings-sidebar">
        <div class="body-large bold on-background-text section-title">{{localization.trending_period}}</div>
        <div id="quick-filter-container" class="sidebar-card body-medium on-surface-text">
          <a class="material-button {{#if (comp selectedRange 0)}}inverse{{else}}outlined{{/if}} label-large" href="/rankings/trending?range=0">{{localization.trending_past_day}}</a>
          <a class="material-button {{#if (comp selectedRange 1)}}inverse{{else}}outlined{{/if}} label-large" href="/rankings/trending?range=1">{{localization.trending_past_week}}</a>
          <a class="material-button {{#if (comp selectedRange 2)}}inverse{{else}}outlined{{/if}} label-large" href="/rankings/trending?range=2">{{localization.trending_past_month}}</a>
        </div>
    </div>

    <div id="rankings-content">
        {{#each trending}}

            <div id="e{{placement}}" class="rankings-entry">
                <div class="rank title-large">{{placement}}</div>
                <a class="cover" style="background-image:url({{song.displayThumbnail}})" href="/song/{{song.id}}?referer=/rankings/trending"></a>
                <div class="title">
                    <a class="main-title title-medium-large" href="/song/{{song.id}}?referer=/rankings/trending">{{preferredName}}</a>
                    <div class="artists">
                        {{#each producers}}
                            <a class="label title-small artist" href="/artist/{{id}}?referer=/rankings/trending">{{preferredName}}</a>
                        {{/each}}
                    </div>
                </div>
            </div>

        {{/each}}

    </div>
</div>